{
    "name": "vireo/starter",
    "description": "Vireo Framework application starter template with Vertical Slice Architecture and Inertia.js.",
    "type": "project",
    "license": "MIT",
    "keywords": [
        "framework",
        "php",
        "vertical-slice",
        "starter",
        "boilerplate",
        "inertia",
        "react",
        "vue"
    ],
    "homepage": "https://github.com/mrzh4s/vireo-starter",
    "authors": [
        {
            "name": "mrzh4s",
            "email": "mrzh4s@gmail.com"
        }
    ],
    "support": {
        "issues": "https://github.com/mrzh4s/vireo-starter/issues",
        "source": "https://github.com/mrzh4s/vireo-starter",
        "docs": "https://github.com/mrzh4s/vireo-framework#readme"
    },
    "require": {
        "php": "^8.4",
        "vireo/framework": "^1.0.2"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0"
    },
    "autoload": {
        "psr-4": {
            "Config\\": "Config/",
            "Features\\": "Features/",
            "Infrastructure\\": "Infrastructure/"
        },
        "exclude-from-classmap": [
            "Infrastructure/Persistence/Migrations",
            "Infrastructure/Persistence/Seeds"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "Tests/"
        }
    },
    "bin": ["vireo"],
    "scripts": {
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\"",
            "@php vireo key:generate"
        ],
        "dev": "./vireo dev",
        "build": "npm run build",
        "test": "vendor/bin/phpunit",
        "serve": "./vireo serve",
        "migrate": "./vireo migrate",
        "migrate:rollback": "./vireo migrate:rollback",
        "migrate:status": "./vireo migrate:status",
        "seed": "./vireo db:seed"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "php-http/discovery": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
